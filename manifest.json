{
  "manifest_version": 2,

  "name": "Browser capture",
  "description": ".",
  "version": "1.0",
  "devtools_page": "devtools.html",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Start Capture"      // optional; shown in tooltip
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "webRequest"
  ]
}
